<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:orientation="horizontal"
    android:paddingBottom="10.0dip"
    android:paddingLeft="6.0dip"
    android:paddingRight="14.0dip"
    android:paddingTop="10.0dip">

    <ImageView
        android:id="@+id/iv_find_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_find_jwc_arrow"/>

    <TextView
        android:id="@+id/tv_find_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_find_item_arrow"
        android:ellipsize="end"
        android:maxEms="12"
        android:singleLine="true"
        android:text="帖子标题"
        android:textColor="@color/font_darker"
        android:textSize="13.0dip"
        />


    <TextView
        android:id="@+id/tv_find_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="11dp"
        android:text="11:11"
        android:textColor="@color/font_darker"
        android:textSize="11.0dip"/>


    <TextView
        android:id="@+id/tv_find_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_find_item_title"
        android:paddingLeft="10dp"
        android:text="@string/reply"
        android:textColor="@color/font_darker"
        android:textSize="15.0dip"/>

    <TextView
        android:id="@+id/tv_find_item_reply"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/tv_find_item_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="100"
        android:textColor="@color/font_darker"
        android:textSize="11.0dip"/>

</RelativeLayout>