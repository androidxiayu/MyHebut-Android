<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10.0dip"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:paddingTop="10.0dip">

    <LinearLayout
        android:id="@+id/ll_exam_record_score"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_exam_record_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="40"
            android:textColor="#fff25e5e"
            android:textSize="25.0dip"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textColor="#fff25e5e"
            android:textSize="16.0dip"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_exam_record_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ll_exam_record_score"
        android:drawableLeft="@mipmap/ic_exam_record_time"
        android:drawablePadding="8.0dip"
        android:text="0分0秒"
        android:textColor="#ff999999"
        android:textSize="12.0dip"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_exam_record_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="100%"
            android:textColor="#fff25e5e"
            android:textSize="16.0dip"/>

        <TextView
            android:id="@+id/tv_exam_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="1.0dip"
            android:drawablePadding="5.0dip"
            android:text="2016-02-23 19:37:49"
            android:textColor="#ff999999"
            android:textSize="12.0dip"/>
    </LinearLayout>
</RelativeLayout>