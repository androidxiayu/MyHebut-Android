<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10.0dip"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:paddingTop="10.0dip">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_exam_rank_avatar"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/user_avatar_default"
        app:riv_border_color="#ffffffff"
        app:riv_border_width="2.0dip"
        app:riv_oval="true"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_exam_rank_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_exam_rank_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:text="infuture"
            android:textColor="@color/font_darker"
            android:textSize="16.0dip"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_toRightOf="@id/iv_exam_rank_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_exam_rank_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="100分"
                android:textColor="@color/font_gray_dark"
                android:textSize="12.0dip"/>

            <TextView
                android:id="@+id/tv_exam_rank_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_exam_rank_score"
                android:text="4分23秒"
                android:textColor="@color/font_gray_dark"
                android:textSize="12.0dip"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_exam_rank_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_exam_rank_1"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/ll_exam_rank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第"
            android:textColor="@color/font_gray_dark"
            android:textSize="16.0dip"/>

        <TextView
            android:id="@+id/tv_exam_rank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#fff25e5e"
            android:textSize="16.0dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名"
            android:textColor="@color/font_gray_dark"
            android:textSize="16.0dip"/>

    </LinearLayout>

</RelativeLayout>